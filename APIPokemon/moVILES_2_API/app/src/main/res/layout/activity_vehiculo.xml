<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VehiculoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Vehiculo"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/Placa"
        android:layout_width="351dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:hint="p.e. AAA-111"
        android:inputType="textPersonName"
        android:textSize="25dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marca"
        android:textSize="25dp"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etMarca"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:hint="Digite la marca del vehiculo"
        android:inputType="textPersonName"
        android:textSize="25dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modelo"
        android:textSize="25dp"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etModelo"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:hint="Digite el modelo del vehidulo"
        android:inputType="number"
        android:textSize="25dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="valor"
        android:textSize="25dp"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etValor"
        android:layout_width="347dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:hint="Digite el valor del vehidulo"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/checkBoxActivo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:checked="false"
        android:text=" Activo" />

    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:onClick="guardar"
        android:text="Guardar" />
|

    <Button
        android:id="@+id/buttonConsultar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:minHeight="48dp"
        android:onClick="Consultar"
        android:text="Consultar"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/Anular"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:onClick="anular"
        android:text="anular" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:onClick="cancelar"
        android:text="Cancelar" />

    <Button
        android:id="@+id/Regresar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:onClick="Regresar"
        android:text="Regresar" />
</LinearLayout>